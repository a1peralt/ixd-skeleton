<!--garden page-->
<html>
<head>
    <style>
        
    </style>

	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	
	<title>My Garden</title>

    <!--linking js and css-->
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/Nurture.css" rel="stylesheet">
    <link href="/css/myGarden.css" rel="stylesheet">

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>

	<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
	<script src="/js/jQueryUI.js"></script>

	<script src="/js/functionality.js"></script>
    <script src="/js/gardenFunctionality.js"></script>

	<!-- Import Fonts-->
	<link href="https://fonts.googleapis.com/css?family=Fredoka+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito&display=swap" rel="stylesheet">

    
</head>
<body style="overflow:auto;
	background-image: url('https://raw.githubusercontent.com/a1peralt/ixd-skeleton/master/resources/Sky%20Gradient.png');
	background-position: 0px 1000px;
	background-attachment: fixed;">

	<div id="inactivator"></div>

			<div id ="hamburger">
			<img src="https://raw.githubusercontent.com/a1peralt/ixd-skeleton/master/resources/hamburger.png" height=50px width=50px>
			</div>

			<ul id= "cross">
				<img src="https://raw.githubusercontent.com/a1peralt/ixd-skeleton/master/resources/x.png" height=50px width=50px>
			</ul>
				
			<div class = "panel">

				<ul id ="hamWords" style="list-style:none; line-height:120px;">

                    <li>
                        <a href="/logged/home">
                        <img src="https://raw.githubusercontent.com/a1peralt/ixd-skeleton/master/resources/hamburger_icons/home.png"
                        class='ham-icons' style="left: -25%; top: 7.5%;">
                        Home
                        </a>
                    </li>

                    <li>
                        <a href="/mygarden">
                        <img src="https://raw.githubusercontent.com/a1peralt/ixd-skeleton/master/resources/hamburger_icons/plant.png"
                        class='ham-icons' style="left: -25%; top: 27.5%;">
                        My Garden
                        </a>
                    </li>

                    <li>
                        <a href="#">
                        <img src="https://raw.githubusercontent.com/a1peralt/ixd-skeleton/master/resources/hamburger_icons/collaborate.png"
                        class='ham-icons' style="left: -25%; top: 47.5%;">
                        Collaborate
                        </a>
                    </li>

                    <li>
                        <a href="/help">
                        <img src="https://raw.githubusercontent.com/a1peralt/ixd-skeleton/master/resources/hamburger_icons/question.png"
                        class='ham-icons' style="left: -25%; top: 67.5%;">
                        Help
                        </a>
                    </li>

                    <li>
                        <a href="/login">
                        <img src="https://raw.githubusercontent.com/a1peralt/ixd-skeleton/master/resources/hamburger_icons/logout.png"
                        class='ham-icons' style="left: -25%; top: 88%;">
                        Logout
                        </a>
                    </li>
                    
				</ul>
			</div>
				

    <div id=popup>
        <div id=popPic></div>
        <div id=popText> Plant Name</div>
        <button id=popClose> Close</button>

    </div>

    <div id=garden-inactivator></div>

    <div id=MyGardenTitle>
        My Garden

        <br>

        <p id=page-description> Plants grown </p>

        <div id=circBG> {{count}} </div>
    </div>

    <div id=plant-container>

        {{#each plants}}
        <div class=plant id={{@index}}>
            <img src={{image}} width="105px" height="105px">
            <p id=image style="display: none;"><img src={{image}} width="105px" height="105px"></p>
            <p id=name style="display: none;">{{name}}</p>
            <p id=date style="display: none;">{{date}}</p>
            <p id=time style="display: none;">{{time}}</p>
        </div>
        {{/each}}
        
    </div>

</body>
</html>

